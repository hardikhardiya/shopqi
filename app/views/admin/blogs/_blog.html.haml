%table.standard-table.ssb{:cellspacing => "0", :style => "margin-bottom: 40px"}
  %thead
    %tr
      %th{:width => "20%"}==#{blog.title}  Article
      %th{:width => "10%"} Comment
      %th{:width => "17%"} Tag
      %th{:width => "13%"} Author
      %th{:width => "8%"} Update
      %th{:width => "5%"} &nbsp;
  %tbody
    -articles = blog.articles
    =render partial: 'admin/articles/article' , collection: articles, locals: {blog: blog}
    %tr.last-article
      %td{:colspan => "6"}=link_to "管理 #{blog.title}", blog_path(blog),class: 'view-all-articles'
