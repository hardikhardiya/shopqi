      %tr
        %th(scope="col") Title
        %th(scope="col" style="width: 150px;") Update
        %th(scope="col" style="width: 50px") &nbsp;
    %tbody= render pages
  / PAGINATION LINKS
  #btm-nav.act-screen
    #pagination


