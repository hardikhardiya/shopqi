.shopqi-dialog(aria-labelledby=":0" role="dialog")
  .shopqi-dialog-title.shopqi-dialog-title-draggable(style="text-align: left; ")
    %span.shopqi-dialog-title-text=title
    %span.shopqi-dialog-title-close(title='Click to close' href='') x
  .shopqi-dialog-content(style="text-align: left; cursor: default")=body
:javascript
  $('.blockUI.blockMsg.blockPage').draggable({
    handle: '.shopqi-dialog-title',
    cancel: '.shopqi-dialog-content'
  });
